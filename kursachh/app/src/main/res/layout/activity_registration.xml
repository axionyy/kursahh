<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="20dp"

        android:src="@drawable/logo_nytrigid"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/registrationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:text="Регистрация"
        android:textSize="25sp"
        android:textColor="@color/black"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo2" />

    <EditText
        android:id="@+id/login_input_registration"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"

        android:hint="Логин"
        android:textSize="25sp"
        android:background="@color/green"

        app:layout_constraintTop_toBottomOf="@+id/registrationText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/password_input_registration"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"

        android:hint="Пароль"
        android:textSize="25sp"
        android:background="@color/green"

        app:layout_constraintTop_toBottomOf="@+id/login_input_registration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <EditText
        android:id="@+id/name_registration"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"

        android:hint="Имя"
        android:textSize="25sp"
        android:background="@color/green"

        app:layout_constraintTop_toBottomOf="@+id/password_input_registration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <EditText
        android:id="@+id/surname_registration"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"

        android:hint="Фамилия"
        android:textSize="25sp"
        android:background="@color/green"

        app:layout_constraintTop_toBottomOf="@+id/name_registration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <EditText
        android:id="@+id/gender_registration"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"

        android:hint="Пол"
        android:textSize="25sp"
        android:background="@color/green"

        app:layout_constraintTop_toBottomOf="@+id/surname_registration"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/toll_registration"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"

        android:hint="Рост"
        android:textSize="25sp"
        android:background="@color/green"

        app:layout_constraintTop_toBottomOf="@+id/surname_registration"
        app:layout_constraintLeft_toRightOf="@+id/gender_registration"
        app:layout_constraintRight_toLeftOf="@+id/weight_registration" />

    <EditText
        android:id="@+id/weight_registration"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"

        android:hint="Вес"
        android:textSize="25sp"
        android:background="@color/green"

        app:layout_constraintTop_toBottomOf="@+id/surname_registration"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/birthday_registration"
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"

        android:hint="Дата рождения"
        android:textSize="20sp"
        android:background="@color/green"

        app:layout_constraintTop_toBottomOf="@+id/gender_registration"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/type_activity_registration"
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"

        android:hint="Тип активности"
        android:textSize="20sp"
        android:background="@color/green"

        app:layout_constraintTop_toBottomOf="@+id/weight_registration"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/enter_profile_registration"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"

        android:backgroundTint="@color/orange"
        android:text="Зарегистрироваться"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:onClick="Autorization"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthday_registration" />

    <TextView
        android:id="@+id/enter_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:text="Войти в учетную запись"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:onClick="Autorization"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_profile_registration" />

</androidx.constraintlayout.widget.ConstraintLayout>